<%- include("header") -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>What have you eaten today</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form action="/history" method="POST">
                <div class="form-group">
                    <label for="histDate">Generate Date: </label>
                    <input type="date" class="form-control" id="histDate" name="histDate">
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
            </form>
        </div>
    </div>
    <div class="row">


            <% if (meals.length == 0) { %>
                <div class="col-12">
                    No meals found
                </div>
            <% } else { %>
                <% meals.forEach(element => { %>
                    <div class="col-4">
                        <div class="card">
                            <div class="card-header">
                            <%= element.name %> 
                            </div>
                            <ul class="list-group list-group-flush">
                                <% element.ingredients.forEach(element => { %>
                                    <li class="list-group-item"> <%= element %> </li>
                                <% }) %>  
                            </ul>
                        </div>
                    </div>
                <% }); %>      
            <% } %>
    </div>
</div>


<%- include("footer") -%>