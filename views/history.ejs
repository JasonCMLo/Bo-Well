<%- include("header") -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>What have you eaten today</h1>
        </div>
    </div>
    <div class="row">

        <% meals.forEach(element => { %>
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                    <%= element.name %> 
                    </div>
                    <ul class="list-group list-group-flush">
                        <% element.ingredients.forEach(element => { %>
                            <li class="list-group-item"> <%= element %> </li>
                        <% }) %>  
                    </ul>
                </div>
            </div>
        <% }); %>
        

    </div>
</div>


<%- include("footer") -%>